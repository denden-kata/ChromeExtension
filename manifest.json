/* manifest.json */

{  
    // 書き方は公式（https://developer.chrome.com/extensions/manifest）参照
    "manifest_version": 2,
    // 名前
    "name": "Wait a minute!",
    // 拡張の説明
    "description": "chromeを閉じる際に、閉じるかどうかポップアップを表示します",
    // 拡張のバージョン（アップデートの度に更新必須）
    "version": "1.0",

    // ブラウザ上でどう動くか
    "browzer_action":{
        // ツールバーに常駐するアイコンの読み込み
        // 指定しないと名前の頭文字になるらしい（Wになるのかな）
        "default_icon":"icon.jpg"
    },

    "content_scripts":[
        {
            // 読み込むjsファイル
            "js":["main.js"]
        }
    ]
}